{% extends "layout.njk" %}

{% block content %}
    <div class="card table_index">
        <table width="100%">
            <thead>
                <tr>
                    <td>Teacher</td>
                    <td>Subjects</td>
                    <td>More</td>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image:url({{ teacher.avatar_url }})"></span>
                            {{teacher.name}}</td>
                        <td>
                            {% for subject in teacher.subjectArray %}
                                <span>{{ subject }}</span>
                            {% endfor %}
                        </td>
                        <td>
                            <a href="/teachers/{{teacher.id}}">more</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}