{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="image"></section>
        <section class="content">
            <h3>Teacher Profile</h3>

            <div class="item">
                <div>Name</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Age</div>
                <div>{{ teacher.age }}</div>
            </div>

            <div class="item">
                <div>Scholarity</div>
                <div>{{ teacher.scholarity }}</div>
            </div>

            <div class="item">
                <div>Type of Class</div>
                <div>{{ teacher.type_class }}</div>
            </div>

            <div class="item">
                <div>Subjects</div>
                <div>
                    {% for subject in teacher.subjects %}
                        <span>{{subject}}</span>
                        {% endfor%}
                    </div>
                </div>

                <div class="item">
                    <div>Since</div>
                    <div>{{ teacher.date}}</div>
                </div>
            </section>
        </div>
    {% endblock content %}