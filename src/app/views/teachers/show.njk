{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="image" style="background-image:url({{ teacher.avatar_url }})"></section>
        <section class="content">
            <h3>Teacher Profile</h3>

            <div class="item">
                <div>Name</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Age</div>
                <div>{{ teacher.age }}</div>
            </div>

            <div class="item">
                <div>Scholarity</div>
                <div>{{ teacher.education_level }}</div>
            </div>

            <div class="item">
                <div>Type of Class</div>
                <div>{{ teacher.class_type }}</div>
            </div>

            <div class="item">
                <div>Subjects</div>
                <div>
                    {% for subject in teacher.subjects_taught %}
                        <span>{{subject}}</span>
                        {% endfor%}
                    </div>
                </div>

                <div class="item">
                    <div>Since</div>
                    <div>{{ teacher.created_at}}</div>
                </div>

                <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>
            </section>
        </div>
    {% endblock content %}