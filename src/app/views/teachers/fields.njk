<div class="item">
    <div>Avatar URL</div>
    <div><input type="url" name="avatar_url" placeholder="http://" value="{{ teacher.avatar_url }}"></div>
</div>

<div class="item">
    <div>Name</div>
    <div><input type="text" name="name" placeholder="Teacher's name" value="{{ teacher.name }}"></div>
</div>

<div class="item">
    <div>Age</div>
    <div><input type="date" name="birth_date" value="{{ teacher.birth_date }}"></div>
</div>

<div class="item">
    <div>Scholarity</div>
    <div>
        <select name="education_level">
            <option value="High School" {% if teacher.education_level=="High School" %} selected="selected" {% endif %}>High School</option>
            <option value="Graduate" {% if teacher.education_level=="Graduate" %} selected="selected" {% endif %}>Graduate</option>
            <option value="Master's Degree" {% if teacher.education_level=="Master's Degree" %} selected="selected" {% endif %}>Master's Degree</option>
            <option value="Doctorate Degree" {% if teacher.education_level=="Doctorate Degree" %} selected="selected" {% endif %}>Doctorate Degree</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Type of Class</div>
    <div>
        <span><input type="radio" name="class_type" value="Distance" {% if teacher.class_type=="Distance" %} checked="checked" {% endif %}>Distance</span>
        <span><input type="radio" name="class_type" value="Presential" {% if teacher.class_type=="Presential" %} checked="checked" {% endif %}>Presential</span></div>
</div>

<div class="item">
    <div>Subjects</div>
    <div>
        <input type="text" name="subjects_taught" placeholder="Put subjects separated by commas" value="{{ teacher.subjects_taught }}">
    </div>
</div>
<button type="submit">Submit</button>